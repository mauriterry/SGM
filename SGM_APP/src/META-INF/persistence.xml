<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SGM_APPPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>co.edu.ucatolica.cl.ja.sgm.modelo.Historial</class>
    <class>co.edu.ucatolica.cl.ja.sgm.modelo.Artista</class>
    <class>co.edu.ucatolica.cl.ja.sgm.modelo.Lista</class>
    <class>co.edu.ucatolica.cl.ja.sgm.modelo.Pista</class>
    <class>co.edu.ucatolica.cl.ja.sgm.modelo.Usuario</class>
    <class>co.edu.ucatolica.cl.ja.sgm.modelo.Album</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sgmdb?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="sgmdb"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="sgmdb"/>
    </properties>
  </persistence-unit>
</persistence>
